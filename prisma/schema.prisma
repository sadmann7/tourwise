generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model Tour {
    id         String     @id @default(cuid())
    country    String
    preference PREFERENCE @default(ADVENTURE)
    season     SEASON     @default(WINTER)
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
    places     Place[]
}

model Place {
    id          String   @id @default(cuid())
    name        String
    description String
    like        Int      @default(0)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    tour        Tour?    @relation(fields: [tourId], references: [id], onDelete: Cascade)
    tourId      String?
}

model UniquePlace {
    id          String     @id @default(cuid())
    name        String     @unique
    description String
    country     String
    preference  PREFERENCE @default(ADVENTURE)
    season      SEASON     @default(WINTER)
    like        Int        @default(0)
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
}

enum PREFERENCE {
    ADVENTURE
    CULTURE
    FOOD
    RELAXATION
    NATURE
}

enum SEASON {
    WINTER
    SPRING
    SUMMER
    AUTUMN
}
